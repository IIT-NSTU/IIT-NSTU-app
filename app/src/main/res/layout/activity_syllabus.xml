<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    tools:context=".IntroActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="157dp"
                android:layout_height="161dp"
                android:layout_marginLeft="105dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/nstulogo"
                tools:layout_editor_absoluteX="117dp"
                tools:layout_editor_absoluteY="16dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:text="Institute of Information Technology (IIT)"
                android:textColor="#020000"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="6dp"
                tools:layout_editor_absoluteY="199dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:text="Noakhali Science and Technology University"
                android:textColor="#020000"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="24dp"
                tools:layout_editor_absoluteY="244dp" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="259dp"
                android:layout_height="182dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                app:srcCompat="@drawable/iitlogo"
                tools:layout_editor_absoluteX="76dp"
                tools:layout_editor_absoluteY="289dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="125dp"
                android:layout_marginBottom="10dp"
                android:text="Syllabus for"
                android:textColor="#020000"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="146dp"
                tools:layout_editor_absoluteY="492dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="90dp"
                android:layout_marginLeft="15dp"
                android:text="Bachelor of Science in Software Engineering (BSSE)"
                android:textColor="#020000"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="21dp"
                tools:layout_editor_absoluteY="534dp" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:text="View Syllabus"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="140dp"
                tools:layout_editor_absoluteY="607dp" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>