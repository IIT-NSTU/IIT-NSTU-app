                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/assistant_regular"
                        android:text=" Introduction \n"
                        android:textColor="#6f6f6f"
